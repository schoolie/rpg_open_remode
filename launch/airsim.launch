<launch>
  <node pkg="rpg_open_remode" type="depthmap_node" name="remode" clear_params="true" output="screen">

    <param name="cam_width" value="1024" />
    <param name="cam_height" value="1024" />
    <param name="cam_fx" value="512" />
    <param name="cam_cx" value="512" />
    <param name="cam_fy" value="512" />
    <param name="cam_cy" value="512" />

    <param name="cam_k1" value="0" />
    <param name="cam_k2" value="0" />
    <param name="cam_r1" value="0" />
    <param name="cam_r2" value="0" />

    <param name="ref_compl_perc" value="60.0" />
    <param name="publish_conv_every_n" value="3" />
    <remap  from="/svo/dense_input" to="/ORB/DenseInput"/>
  </node>
</launch>
